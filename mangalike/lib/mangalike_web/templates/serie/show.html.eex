<%# Attribute to Prof Nathaniel Tuck's class notes and code %>

<h2 id="mangaTitleId"><%= @manga["title"] %> Information </h2>
<ul>
	<li>
		<strong>Summary:</strong>
		<span id="mangaSummaryId"><%= @manga["description"] %></span>
	</li>
	<li>
		<strong>Artist:</strong>
		<%= @manga["artist"] %>
	</li>
	<li>
		<strong>Author:</strong>
		<%= @manga["author"] %>
	</li>
	<li>
		<strong>Genres:</strong>
		<ul>
			<%= for category <- @manga["categories"] do %>
			<li><%= category %></li>
			<% end %>
		</ul>
	</li>
</ul>
<span><%= link "Back", to: serie_path(@conn, :index) %></span>